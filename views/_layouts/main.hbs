    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="/"><img src="/picture/logo_01.png" alt="logo_01.png" style="width:100%; height: 150%;"></a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><a href="/" style="color: white;">Trang chủ</a></li>
				<li><a href="/category/" style="color: white;"> Chuyên mục</a>
					<ul style="z-index: 2;">
            {{#each this.parent_categories}}
              <li><a href="/categories/{{ID}}/products" >{{Name}}</a>
              <ul>
                {{#each ../this.sub_categories}}
                  {{#if_equal parent_id ../ID}}
                    <li><a href="/categories/{{ID}}/products">{{Name}}</a></li>
                  {{/if_equal}}
                {{/each}}
							</ul>
            {{/each}}
				  </ul>
			  </li>
      </ul>
      <form id = "frmSignout" action="/account/logout" method="POST"></form>
      <ul class="nav navbar-nav navbar-right">
        {{#if isAuthenticated}}
          <li style="margin-top:5%;"><a style="color: black; width: 205px; font-weight:50; border: 1px solid white; border-radius: 5%; background-color:#CCCCCC;padding-top:5px; padding-bottom:5px;">{{authUser}}</a>
            <ul style="z-index: 2;">
              <li><a href="/account/profile/{{authUserID}}">Xem thông tin tài khoản</a></li>
              <li><a href="/account/change_password/{{authUserID}}">Đổi mật khẩu</a></li>
              <li><a href="/admin/view_list_product/">Quản lý bài viết</a></li>
              <li><a href="javascript: $('#frmSignout').submit();">Đăng xuất</a></li>
            </ul>
          </li>
        {{else}}
          <li><a href="/account/login" style="color:white;">Login</a></li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>
